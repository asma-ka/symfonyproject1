{% extends 'base.html.twig' %}

{% block title %}Lister les interventions{% endblock %}

{% block content %}
<div class="app-content content">
        <div class="content-overlay"></div>
        <div class="header-navbar-shadow"></div>
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <div class="content-body">
    <h1>Rdv index</h1>

    <table class="table">
        <thead>
            <tr>
              {#  <th>Id</th> #}
                <th>NumeroRdv</th>
                <th>Prix</th>
                <th>Client</th> 
                <th>Status</th>
                
                <th>Prestation</th>
                <th>Ligne</th>
                <th>Prestataire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rdv in interventions %}
            <tr>
              {#}  <td>{{ rdv.id }}</td>#}
                <td>{{ rdv.numeroRdv }}</td>
                <td>{{ rdv.prix }}</td>
                
                <td>{{ rdv.customer }}</td>
                <td>{{ rdv.rdvStatus}}</td>
               <td>{{ rdv.rdvPrestation}}</td>
                <td>{{ rdv.rdvLigne}}</td>
                <td>{{ rdv.prestataire }}</td>
                 

                <td>
                    {# <a href="{{ path('intervention_show', {'id': rdv.id}) }}">show</a>
                    <a href="{{ path('intervention_edit', {'id': rdv.id}) }}">edit</a> #}
                     <button type="button" class="btn btn-secondary float-left " style="margin-top: 5px"> <a href="{{ path('intervention_show', {'id': rdv.id}) }}">Afficher  </a></button>
                   <button type="button" class="btn btn-secondary float-left " style="margin-top: 5px"> <a href="{{ path('intervention_edit', {'id': rdv.id}) }}">Modifier</a></button>
                
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    </div>

    <a href="{{ path('intervention_new') }}">Create new</a>
{% endblock %}
