{% extends 'base.html.twig' %}

{% block title %}Modification du profil{% endblock %}

{% block body %}

<div class="container">
    <h1 class="my-5">Modifier votre compte !</h1>

    {{ form_start(form) }}

    <div class="row">
        <div class="col">
            <div class="alert alert-light">
                <h2 class="alert-heading">Informations générales</h2>
                <hr>
                <table style="width:10%">
                    <tr>
                       <th>{{ form_row(form.nom) }}</th>
                    </tr>
                     <tr>
                       <th>{{ form_row(form.prenom) }}</th> 
                    </tr>
                       <tr>
                       <th>{{ form_row(form.email) }}</th>
                       </tr>
                    <tr>
                       <th>{{ form_row(form.picture) }}</th>
                    </tr>
                </table>
            </div>
            
           
        </div>
        <div class="col">
            <div class="alert alert-light">
                <h2 class="alert-heading">Détails</h2>
                <hr>
                <table style="width:10%">
                     <th>{{ form_row(form.description) }}</th>
                 </table>
                

                <hr>
                <p>Vous y êtes presque, confirmez votre modification !</p>
                <button type="submit" class="btn btn-success">
                    
                    Enregistrer
                </button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
    
</div>

{% endblock %}